body
	padding 10px

.noselect
		-webkit-touch-callout: none
		-webkit-user-select: none
		-khtml-user-select: none
		-moz-user-select: none
		-ms-user-select: none
		user-select: none

input, button
	padding 5px

button
	width 100px

.errors
	border 1px solid #000
	margin-top 10px
	padding 10px
	position: relative
	color red
	.close-icon
		position: absolute
		top 10px
		right 10px
		padding: 10px
		border 1px solid #999
		background-color #FFF

.panel
	border 1px solid #999
	margin-bottom: 10px
	padding 0px
	vertical-align: top
	.header
		font-size 18px
		font-weight bold
		position: relative
		padding: 10px
		border-bottom: 1px solid #999
		.icons
			position: absolute
			display: inline-block
			top 10px
			right 10px
	.body
		padding 0px
		.form
			padding: 10px
			.item
				margin-top: 5px
			label
				width: 150px
				display: inline-block
			button
				margin-top: 10px

.list
	.item
		padding: 10px
		cursor pointer
	.selected
		background-color #ccc
